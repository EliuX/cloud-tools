# Azure Storage Migration Configuration

# Source Storage Account (choose one authentication method)
# Option 1: Connection String (recommended)
SOURCE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=sourcestorageaccount;AccountKey=your-source-account-key;EndpointSuffix=core.windows.net

# Option 2: Account Name + Key
# SOURCE_STORAGE_ACCOUNT_NAME=sourcestorageaccount
# SOURCE_STORAGE_ACCOUNT_KEY=your-source-account-key

# Option 3: Account Name + SAS Token
# SOURCE_STORAGE_ACCOUNT_NAME=sourcestorageaccount
# SOURCE_STORAGE_SAS_TOKEN=your-source-sas-token

# Destination Storage Account (choose one authentication method)
# Option 1: Connection String (recommended)
DESTINATION_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=destinationstorageaccount;AccountKey=your-destination-account-key;EndpointSuffix=core.windows.net

# Option 2: Account Name + Key
# DESTINATION_STORAGE_ACCOUNT_NAME=destinationstorageaccount
# DESTINATION_STORAGE_ACCOUNT_KEY=your-destination-account-key

# Option 3: Account Name + SAS Token
# DESTINATION_STORAGE_ACCOUNT_NAME=destinationstorageaccount
# DESTINATION_STORAGE_SAS_TOKEN=your-destination-sas-token

# Migration Options
INCLUDE_FILES=false
INCLUDE_QUEUES=false
INCLUDE_TABLES=false

# Performance Settings
BATCH_SIZE=10
MAX_CONCURRENCY=5
MAX_RETRIES=3

# Behavior Options
OVERWRITE=false
SKIP_EXISTING=true
PRESERVE_METADATA=true
PRESERVE_ACCESS_TIER=true

# Filter Options
# CONTAINER_FILTER=^(prod|staging).*
# BLOB_PREFIX=backup/
# EXCLUDE_PATTERNS=*.tmp,*.log
