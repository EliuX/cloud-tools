{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Health Monitor: Dashboard",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/monitoring/HealthMonitor.ps1",
                "-Dashboard"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/monitoring"
            },
            "problemMatcher": []
        },
        {
            "label": "Health Monitor: Run Once",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/monitoring/HealthMonitor.ps1",
                "-RunOnce"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/monitoring"
            },
            "problemMatcher": []
        },
        {
            "label": "Health Monitor: Continuous",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/monitoring/HealthMonitor.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/monitoring"
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Health Monitor: Setup Task Scheduler",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/monitoring/setup-task-scheduler.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/monitoring"
            },
            "problemMatcher": []
        }
    ]
}
